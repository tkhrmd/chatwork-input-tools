{
  "content_scripts": [{
    "include_globs": ["https://www.chatwork.com/#!rid*", "https://kcw.kddi.ne.jp/#!rid*"],
    "js": ["build/loader.js"],
    "matches": ["https://www.chatwork.com/*", "https://kcw.kddi.ne.jp/*"],
    "run_at": "document_end"
  }],
  "description": "チャットワークに[info]や[code]を入力するボタンを追加します。",
  "manifest_version": 2,
  "name": "Chatwork Input Tools",
  "permissions": ["tabs", "https://www.chatwork.com/*", "https://kcw.kddi.ne.jp/*"],
  "version": "0.5",
  "web_accessible_resources": [
    "build/bundle.js"
  ]
}
